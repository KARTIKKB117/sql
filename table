-- Create the DEPARTMENT table
CREATE TABLE DEPARTMENT (
    DEPTID NUMBER(5) PRIMARY KEY,
    DEPTNAME VARCHAR2(50),
    DEPTLOC VARCHAR2(50)
);

-- Insert the given rows
INSERT INTO DEPARTMENT (DEPTID, DEPTNAME, DEPTLOC) VALUES (1, 'Accounts', 'Chennai');
