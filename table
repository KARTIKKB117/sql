CREATE TABLE PRODUCT (
    PRODID VARCHAR2(10) PRIMARY KEY,
    PRODNAME VARCHAR2(50),
    PRICE NUMBER(10)
);


INSERT INTO PRODUCT (PRODID, PRODNAME, PRICE) VALUES ('P001', 'Laptop', 55000);
INSERT INTO PRODUCT (PRODID, PRODNAME, PRICE) VALUES ('P002', 'Smartphone', 25000);
INSERT INTO PRODUCT (PRODID, PRODNAME, PRICE) VALUES ('P003', 'Keyboard', 1500);
INSERT INTO PRODUCT (PRODID, PRODNAME, PRICE) VALUES ('P004', 'Mouse', 800);
INSERT INTO PRODUCT (PRODID, PRODNAME, PRICE) VALUES ('P005', 'Monitor', 12000);
CREATE TABLE SALES (
    SALESID NUMBER(5) PRIMARY KEY,
    SALESDATE DATE,
    QUANTITY NUMBER(5),
    EMPID NUMBER(5),
    PRODID VARCHAR2(10),
    CONSTRAINT fk_emp FOREIGN KEY (EMPID) REFERENCES EMPLOYEE(EMPID),
    CONSTRAINT fk_prod FOREIGN KEY (PRODID) REFERENCES PRODUCT(PRODID)
);


