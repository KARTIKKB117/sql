CREATE TABLE OldEmployee (
empid       NUMBER,
empname     VARCHAR2(100),
dob         DATE,
doj         DATE,
job         VARCHAR2(50),
salary      NUMBER(10, 2),
deptid      NUMBER
);
INTO OldEmployee (EmpId, EmpName, DoB, DoJ, Job, Salary, DeptId) VALUES (101, 'Vikram', DATE '1985-03-12', DATE '2005-01-10', 'Manager', 65000, 1)
