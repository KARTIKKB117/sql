-- To verify the inserted data
SELECT * FROM DEPARTMENT;
CREATE TABLE EMPLOYEE (
    EMPID NUMBER(5) PRIMARY KEY,
    EMPNAME VARCHAR2(50),
    DOB DATE,
    DOJ DATE,
    JOB VARCHAR2(50),
    SALARY NUMBER(10),
    DEPTID NUMBER(5),
    CONSTRAINT fk_dept FOREIGN KEY (DEPTID) REFERENCES DEPARTMENT(DEPTID)
);


INSERT INTO EMPLOYEE (EMPID, EMPNAME, DOB, DOJ, JOB, SALARY, DEPTID)
